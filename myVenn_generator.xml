
<tool id="myVenn_generator" name="Venn Diagram with optional input" version="0.1.0" python_template_version="3.5">
    <requirements>
	<requirement type="package" version="3">python</requirement>
    </requirements>
   
    <command detect_errors="exit_code"><![CDATA[
	    python3 '$__tool_directory__/myVenn.py' 
	    -f #for $q in $series# '${q.input}' #end for#
	    -titles #for $q in $series# '${q.titles}' #end for#

    ]]></command> 
    
<inputs>
	<repeat name="series" title="Peptides files (max. 6, min. 2)">
    		<param name="input" type="data" format="txt" label="Dataset" help="The input can be a matrix file, but the 1st column should be peptides"/>
		<param name="titles" type="text" data_ref="input" label="Insert name of the intersection set:"/>
	</repeat>	
</inputs>    

<outputs>
	<data name="output1" format="pdf" from_work_dir="venn.pdf" label="Venn Diagram"/>
</outputs>

    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
