
<tool id="myGibbs_generator" name="GibbsCluster 2.0 Generator" version="0.1.0" python_template_version="3.5">
    <requirements>
	<requirement type="package" version="3">python</requirement>
    </requirements>
   
    <command detect_errors="exit_code"><![CDATA[
	    python3 '$__tool_directory__/myGibbs.py' -f '$input'   -g $gibs_cluster
	]]></command> 
    
<inputs>
	<param type="data" format = "txt" name="input" label="Peptide"  help="The input can be a matrix file, but the 1st column should be peptides"/>
	<param name="gibs_cluster" type="text" value="1-15" label="Insert number of clusters:"  help="e.g. as single number [15] or interval [1-15]"  />
</inputs>    

<outputs>

	<collection name="output1" type="list" label="GibbsCluster Cores output">
		<discover_datasets pattern="(?P&lt;designation&gt;.+)\.txt"  ext="txt" directory="myGibbs_100/cores_real" visible="false"  />
	</collection>
	<collection name="output2" type="list" label="GibbsCluster Peptides output">
		<discover_datasets pattern="(?P&lt;designation&gt;.+)\.txt"  ext="txt" directory="myGibbs_100/res_real" visible="false"  />
	</collection>
	<data name="output3" format="txt" from_work_dir="myGibbs.log.txt"  label="GibbsCluster log"/>
</outputs>

    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
