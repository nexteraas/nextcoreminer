
<tool id="myPepFromVenn_finder" name="Peptides from Venn Finder" version="0.1.0" python_template_version="3.5">
    <requirements>
	<requirement type="package" version="3">python</requirement>
    </requirements>
   
    <command detect_errors="exit_code"><![CDATA[
    	python3 '$__tool_directory__/myPepFromVenn.py' -f '$input'    -g ${" ".join(map(str,$groups  ))}  
    ]]></command> 
    
<inputs>
	<param type="data" format = "txt" name="input" label="Matrix file from Venn:" />
	<param name="groups" type="text" value="" label="Insert your groups:"  multiple="true" help="e.g. R2_R12C9+R2_6F9 R2_R12C9mut4+R2_6F9"  />
</inputs>    

<outputs>

	<data name="output" format="txt" from_work_dir="myPepFromVenn.txt"  label="Pepides from Venn groups"/>	
</outputs>

    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
