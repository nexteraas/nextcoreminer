
<tool id="myHeatmapWithinCluster_generator" name="Heatmap Within Cluster Generator" version="0.1.0" python_template_version="3.5">
    <requirements>
	<requirement type="package" version="3">python</requirement>
    </requirements>
   
    <command detect_errors="exit_code"><![CDATA[
	    python3 '$__tool_directory__/myHeatmapWithinCluster.py' -f '$input' -l $pepLength -o $option  -colorClass $colorClass
    ]]></command> 
    
<inputs>
	<param type="data" format = "txt" name="input" label="Input file with peptides and groups:"/>
	<param name="pepLength" type="select" label="Set length of peptides" >
		<option value="11" selected="true">11</option>
		<option value="12">12</option>
	</param>
	<param name="colorClass" type="select" display="radio" label="Heatmap should be colored by" >
                <option value="groups"> Groups </option>
                <option value="rounds"> Rounds </option>
                <option value="cellTypes"> Cell Types </option>
	</param>

	<param name="option" type="select" display="radio" label="Similarity Measurement: ">
                <option value="1"> Euclidean Distance (BL62 matrix was used for the measurement) </option>
                <option value="2"> Kullback-Leibler Divergence (i.e. relative entropy. Frequency was calculated for each position) </option>
        </param>
</inputs>    

<outputs>

	<data name="output" format="png" from_work_dir="HeatmapWithinCluster.png"  label="Heatmap Within Cluster"/>	
</outputs>

    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
