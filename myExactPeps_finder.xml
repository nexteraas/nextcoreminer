
<tool id="myExactPeps_finder" name="Clusters of Peptides Finder" version="0.1.0" python_template_version="3.5">
    <requirements>
	<requirement type="package" version="3">python</requirement>
    </requirements>
   
    <command detect_errors="exit_code"><![CDATA[
    	python3 '$__tool_directory__/myExactPeps.py' -f ${" ".join(map(str,'$input'  ))}   -peps ${" ".join(map(str,$peps  ))}  
    ]]></command> 
    
<inputs>
	<param type="data" format = "txt" name="input" label="Cluster list:" multiple="True"/>
	<param name="peps" type="text" value="" label="Insert your peptides:"  multiple="true" help="e.g. AWLTQFFVYEEW LLCRQRFAVESF YLCVQIFPGETY"  />
</inputs>    

<outputs>

	<data name="output" format="txt" from_work_dir="myExactPeps.txt"  label="Clusters of Peptides"/>	
</outputs>

    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
