
<tool id="myHeatmapBetweenClusters_generator" name="Heatmap Between Clusters Generator" version="0.1.0" python_template_version="3.5">
    <requirements>
	<requirement type="package" version="3">python</requirement>
    </requirements>
   
    <command detect_errors="exit_code"><![CDATA[
	    python3 '$__tool_directory__/myHeatmapBetweenClusters.py' -f ${" ".join(map(str,$input  ))} 
    ]]></command> 
    
<inputs>
	<param type="data"  name="input" label="Please insert the clusters:" multiple="True" />
        
</inputs>    

<outputs>

	<data name="output" format="png" from_work_dir="HeatmapBetweenClusters.png"  label="Heatmap Between Clusters"/>	
</outputs>

